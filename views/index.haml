!!! 5
%html
  %head
    %meta(charset='utf-8')
    %meta(name='viewport' content='width=680, maximum-scale=1.0')
    %title Political Bias Detector
    %link(rel='stylesheet' href='/css/bootstrap.min.css' type='text/css')
    %link(rel='stylesheet' href='/css/custom.css' type='text/css')
  %body
    .text-center
      %h1 Political Bias Detector
      %br
  .text-center
    %form{ :action => "", :method => "post"}
      %p
        %label='Choose a Twitter feed'
        %select{name: :twitter_feed }
          - @twitter_feeds.each do |feed|
            %option{:name => feed, :value=> feed}="#{feed}"
      %p
        %input{:type => "submit", :value => "Submit", :class => "button"}
